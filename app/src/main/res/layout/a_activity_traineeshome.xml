<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bb"
    tools:context=".A_TraineesHome">

    <ImageView
        android:id="@+id/THomeImage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/admin" />

    <Button
        android:id="@+id/btntp"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:drawableLeft="@drawable/ic_action_u"
        android:background="@drawable/bg_squre_transparent"
        android:padding="10dp"
        android:textColor="#ffffff"
        android:fontFamily="monospace"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="Trainee Profile" />

    <Button
        android:id="@+id/btndw"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:drawableLeft="@drawable/ic_workout1"
        android:background="@drawable/bg_squre_transparent"
        android:padding="10dp"
        android:textColor="#ffffff"
        android:fontFamily="monospace"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="Done Workouts" />

    <Button
        android:id="@+id/btndm"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:drawableLeft="@drawable/ic_meal1"
        android:background="@drawable/bg_squre_transparent"
        android:padding="10dp"
        android:textColor="#ffffff"
        android:fontFamily="monospace"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="Done MealPlans" />

    <Button
        android:id="@+id/btnuw"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:drawableLeft="@drawable/ic_workout2"
        android:background="@drawable/bg_squre_transparent"
        android:padding="10dp"
        android:textColor="#ffffff"
        android:fontFamily="monospace"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="Upload New Workouts" />

    <Button
        android:id="@+id/btnum"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:drawableLeft="@drawable/ic_meal2"
        android:background="@drawable/bg_squre_transparent"
        android:padding="10dp"
        android:textColor="#ffffff"
        android:fontFamily="monospace"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="Upload new MealPlans" />


