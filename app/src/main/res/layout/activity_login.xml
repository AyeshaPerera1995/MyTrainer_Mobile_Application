<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bb"
    tools:context=".Login">

    <ImageView
        android:layout_width="130dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        app:srcCompat="@drawable/logo" />

    <EditText
        android:id="@+id/txtEmail"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="#11000000"
        android:drawableLeft="@drawable/ic_action_u"
        android:ems="15"
        android:fontFamily="monospace"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColor="@android:color/darker_gray"
        android:paddingLeft="10dp"
        android:textColorHint="#777d7a"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/txtPass"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:background="#11000000"
        android:drawableLeft="@drawable/ic_action_pass"
        android:ems="15"
        android:fontFamily="monospace"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="@android:color/darker_gray"
        android:paddingLeft="10dp"
        android:textColorHint="#777d7a"
        android:textSize="15dp" />

    <CheckBox
        android:id="@+id/checkRemember"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="50dp"
        android:textColor="#777d7a"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_marginBottom="20dp"
        android:text="Remember me" />

    <TextView
        android:id="@+id/forgetPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#777d7a"
        android:textStyle="bold"
        android:textSize="15sp"
        android:padding="7dp"
        android:layout_marginLeft="55dp"
        android:fontFamily="monospace"
        android:text="Forget Password ?" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_gravity="center"
        android:background="@drawable/button_bg_rounded_corners" >

        <Button
            android:id="@+id/btnlogin"
            android:layout_width="250dp"
            android:layout_height="25dp"
            android:fontFamily="monospace"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@drawable/btn_b"
            android:text="Sign IN" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/NotAdminLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fcfffe"
            android:textStyle="bold"
            android:textSize="13sp"
            android:paddingTop="7dp"
            android:visibility="invisible"
            android:layout_marginLeft="65dp"
            android:fontFamily="monospace"
            android:text="I'm not an Admin?" />

        <TextView
            android:id="@+id/AdminLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fcfffe"
            android:textStyle="bold"
            android:textSize="13sp"
            android:paddingTop="7dp"
            android:layout_marginRight="50dp"
            android:fontFamily="monospace"
            android:text="I'm an Admin?" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_bg_rounded_corners1" >

        <Button
            android:id="@+id/btnsignup"
            android:layout_width="250dp"
            android:layout_height="25dp"
            android:fontFamily="monospace"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@drawable/back1"
            android:text="SIGN UP" />
    </FrameLayout>




</LinearLayout>