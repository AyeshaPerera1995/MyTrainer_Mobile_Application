<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="5dp"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#000">

    <LinearLayout
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">

            <TextView
                android:id="@+id/dtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:fontFamily="sans-serif-smallcaps"
                android:textSize="18dp"
                android:layout_marginBottom="10dp"
                android:textStyle="bold"
                android:text="Meal 1 -->" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:textColor="@android:color/darker_gray"
                android:fontFamily="monospace"
                android:gravity="right"
                android:textSize="15dp"
                android:textStyle="bold"
                android:text="Time : " />

            <TextView
                android:id="@+id/dtime"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:gravity="left"
                android:textSize="13dp"
                android:fontFamily="monospace"
                android:textStyle="bold"
                android:text="beans 100g" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:textColor="@android:color/darker_gray"
                android:fontFamily="monospace"
                android:gravity="right"
                android:textSize="15dp"
                android:textStyle="bold"
                android:text="Meals : " />

            <TextView
                android:id="@+id/dmeals"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:gravity="left"
                android:textSize="13dp"
                android:fontFamily="monospace"
                android:textStyle="bold"
                android:text="Green Smoothie" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:textColor="@android:color/darker_gray"
                android:fontFamily="monospace"
                android:gravity="right"
                android:textSize="15dp"
                android:textStyle="bold"
                android:text="Calories : " />

            <TextView
                android:id="@+id/dcalories"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:gravity="left"
                android:textSize="13dp"
                android:fontFamily="monospace"
                android:textStyle="bold"
                android:text="Green Smoothie" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#e92626"
                android:gravity="left"
                android:textSize="13dp"
                android:layout_marginTop="10dp"
                android:fontFamily="monospace"
                android:textStyle="bold"
                android:text="Completed Meal at " />

            <TextView
                android:id="@+id/comTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#e92626"
                android:gravity="left"
                android:textSize="13dp"
                android:layout_marginTop="10dp"
                android:fontFamily="monospace"
                android:textStyle="bold"
                android:text="12.23 pm" />

        </LinearLayout>



    </LinearLayout>

    <ImageButton
        android:id="@+id/btnStatus"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:background="@drawable/btn_circle_blue"
        android:src="@drawable/ic_tick" />

</LinearLayout>