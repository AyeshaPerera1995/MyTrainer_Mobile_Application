<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bb"
    tools:context=".register">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:focusable="true"
        android:focusableInTouchMode="true"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="30dp"
                android:fontFamily="monospace"
                android:gravity="center"
                android:padding="10dp"
                android:text="- Sign In -"
                android:textColor="#777d7a"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/shape_layout"
                    android:layout_width="106dp"
                    android:layout_height="106dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/circular_bordershape">

                    <android.support.v7.widget.CardView
                        android:id="@+id/myCardView"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:cardCornerRadius="50dp"
                        android:background="#000"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true">

                        <ImageView
                            android:id="@+id/imgProPic"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#000"
                            android:scaleType="centerCrop"/>


                    </android.support.v7.widget.CardView>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btnOpengallery"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/button_bg_rounded_transparent"
                        android:fontFamily="monospace"
                        android:padding="10dp"
                        android:text="Upload from Gallery"
                        android:textAllCaps="false"
                        android:textColor="#ffffff"
                        android:textSize="13dp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btnOpencamera"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/button_bg_rounded_transparent"
                        android:fontFamily="monospace"
                        android:padding="10dp"
                        android:text="Capture a Photo"
                        android:textAllCaps="false"
                        android:textColor="#ffffff"
                        android:textSize="13dp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>


            <EditText
                android:id="@+id/regisName"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:background="@drawable/text_rounded_corners"
                android:drawableLeft="@drawable/ic_action_u"
                android:ems="10"
                android:fontFamily="monospace"
                android:hint="Full Name"
                android:inputType="textPersonName"
                android:padding="2dp"
                android:textColor="#ffffff"
                android:textColorHint="#777d7a"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/regisDOB"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:layout_marginTop="15dp"
                android:background="@drawable/text_rounded_corners"
                android:drawableLeft="@drawable/ic_action_u"
                android:ems="10"
                android:fontFamily="monospace"
                android:hint="Date of Birth"
                android:padding="2dp"
                android:textColor="#ffffff"
                android:textColorHint="#777d7a"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/regisMobile"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:background="@drawable/text_rounded_corners"
                android:drawableLeft="@drawable/ic_action_mobile"
                android:ems="10"
                android:fontFamily="monospace"
                android:hint="Mobile"
                android:inputType="text|phone"
                android:padding="2dp"
                android:textColor="#ffffff"
                android:textColorHint="#777d7a"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/regisAddress"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:background="@drawable/text_rounded_corners"
                android:drawableLeft="@drawable/ic_action_location"
                android:ems="10"
                android:fontFamily="monospace"
                android:hint="Address"
                android:inputType="textPostalAddress"
                android:padding="2dp"
                android:textColor="#ffffff"
                android:textColorHint="#777d7a"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:fontFamily="monospace"
                android:padding="5dp"
                android:text="Gender"
                android:textColor="#777d7a"
                android:textSize="15sp" />

            <RadioGroup
                android:id="@+id/regisGender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/regisMale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="monospace"
                    android:padding="5dp"
                    android:text="Male"
                    android:textColor="#777d7a" />

                <RadioButton
                    android:id="@+id/regisFemale"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="monospace"
                    android:padding="5dp"
                    android:text="Female"
                    android:textColor="#777d7a" />

            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:fontFamily="monospace"
                android:padding="5dp"
                android:text="Account Details"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/regisEmail"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:background="@drawable/text_rounded_corners"
                android:drawableLeft="@drawable/ic_action_mail"
                android:ems="10"
                android:fontFamily="monospace"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:padding="2dp"
                android:textColor="#ffffff"
                android:textColorHint="#777d7a"
                android:textSize="15sp" />


            <EditText
                android:id="@+id/regisPass"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:background="@drawable/text_rounded_corners"
                android:drawableLeft="@drawable/ic_action_pass"
                android:ems="10"
                android:fontFamily="monospace"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="2dp"
                android:textColor="#ffffff"
                android:textColorHint="#777d7a"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/memtextMai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:textSize="12dp"
                android:fontFamily="monospace"
                android:textStyle="bold"
                android:textColorHint="#e2dede"
                android:hint="(Must contain at least 6 characters.)" />

            <EditText
                android:id="@+id/regisConfirmPass"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:background="@drawable/text_rounded_corners"
                android:drawableLeft="@drawable/ic_action_pass"
                android:ems="10"
                android:fontFamily="monospace"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:padding="2dp"
                android:textColor="#ffffff"
                android:textColorHint="#777d7a"
                android:textSize="15sp" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_bg_rounded_corners1"
                android:padding="5dp">

                <Button
                    android:id="@+id/btnregis"
                    android:layout_width="200dp"
                    android:layout_height="25dp"
                    android:background="@drawable/back1"
                    android:fontFamily="monospace"
                    android:text="Register"
                    android:textColor="#ffffff"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </FrameLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>