<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bb"
    tools:context=".A_UploadNewMealPlans">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:focusable="true"
        android:focusableInTouchMode="true"/>

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/darker_gray"
            android:layout_centerHorizontal="true"
            android:fontFamily="monospace"
            android:layout_marginTop="10dp"
            android:textSize="16dp"
            android:textStyle="bold"
            android:text="You can Customize Meal Count..." />

        <EditText
            android:id="@+id/txtMealCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColorHint="#c21919"
            android:textColor="#c21919"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:fontFamily="monospace"
            android:layout_below="@+id/text"
            android:textAlignment="center"
            android:inputType="number"
            android:textSize="17dp"
            android:textStyle="bold"
            android:hint="Enter Meal Count" />

    <FrameLayout
        android:id="@+id/btnFrameLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/txtMealCount"
        android:background="@drawable/button_bg_rounded_corners1" >

        <Button
            android:id="@+id/btnCreateMeals"
            android:layout_width="270dp"
            android:layout_height="30dp"
            android:fontFamily="monospace"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/back1"
            android:text="Create New Meal plan" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/btnFrameLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/btnFrameLayout"
        android:background="@drawable/button_bg_rounded_corners1" >

        <Button
            android:id="@+id/btnUpdateMeals"
            android:layout_width="270dp"
            android:layout_height="30dp"
            android:fontFamily="monospace"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/back1"
            android:text="Update existing Meal plan" />
    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/btnFrameLayout2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/uploadmealListRecycler"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>

    </LinearLayout>

    </ScrollView>



</RelativeLayout>
